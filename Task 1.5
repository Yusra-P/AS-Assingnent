Module Module1

    Sub Main()

        Dim Name As String
        Dim ID As Integer
        Dim TelephoneNum As String
        Dim startdate As String

        Name = ""
        TelephoneNum = ""
        startdate = ""
        ID = 0

        FileOpen(1, "C:\Computer File Practice\FilePractice1\newMember.txt", OpenMode.Input)
        FileOpen(2, "C:\Computer File Practice\FilePractice1\something.txt", OpenMode.Output)

        While EOF(1) = False

            Input(1, Name)
            Input(1, ID)

            Console.WriteLine("Enter Telephone number for " & Name)
            TelephoneNum = Console.ReadLine

            Console.WriteLine("Enter date of membership for " & Name)
            startdate = Console.ReadLine

            WriteLine(2, Name)
            WriteLine(2, ID)
            WriteLine(2, TelephoneNum)
            WriteLine(2, startdate)

        End While

        FileClose(1)
        FileClose(2)

        My.Computer.FileSystem.DeleteFile("C:\Computer File Practice\FilePractice1\newMember.txt")
        My.Computer.FileSystem.RenameFile("C:\Computer File Practice\FilePractice1\something.txt", "newMember.txt")

        Console.ReadKey()

    End Sub

End Module
